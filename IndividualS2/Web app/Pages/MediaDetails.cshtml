@page
@model Web_app.Pages.MediaDetailsModel

@if (Model.MediaDTO != null)
{
    <div>
        <h1>Title: @Model.MediaDTO.Title</h1>

        <div class="button-container">
            <!-- Like button form -->
            <form method="post">
                <input type="hidden" name="mediaID" value="@Model.MediaDTO.Id" />
                <input type="hidden" name="likeButton" value="Like" /> <!-- For distinguishing like action -->
                <button id="likeButton" type="submit">
                    <i class="fas fa-thumbs-up"></i>
                </button>
            </form>

            <!-- Dislike button form -->
            <form method="post">
                <input type="hidden" name="mediaID" value="@Model.MediaDTO.Id" />
                <input type="hidden" name="dislikeButton" value="Dislike" /> <!-- For distinguishing dislike action -->
                <button id="dislikeButton" type="submit">
                    <i class="fas fa-thumbs-down"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="details-container">

        <img src="/img/mockdetails.jpg" alt="mock-image">
        <p>Description: @Model.MediaDTO.Description</p>
    </div>
}