@page
@model Web_app.Pages.ReviewModel
@{
}
@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}
<b>Reviews:</b>

    
        <div class="cards-grid">
        @foreach (var reviewDTO in Model.reviews)
        {

        <a href="/ReviewDetails?id=@reviewDTO.Id" class="cards-grid-item" style="background: url('../img/mock img.jpg') ">
                    <h1>Title: @reviewDTO.Title</h1>
            <p>Score: @reviewDTO.Score</p>
        </a>
         
        }
   
        </div>
    




