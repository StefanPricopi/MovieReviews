@page
@model Web_app.Pages.ReviewModel
@{
}
@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}

    <div>
        <b>Reviews:</b>
    </div>

    <div class="cards-grid">
        @foreach (var reviewDTO in Model.reviews)
        {
            <a href="/ReviewDetails?id=@reviewDTO.Id" class="review-card text-decoration-none">
                <div class="card-bg" style="background-image: url('../img/mock img.jpg');"></div>
                <div class="card-content">
                    <h2>Title: @reviewDTO.Title</h2>
                    <p>Score: @reviewDTO.Score</p>
                </div>
            </a>
        }
    </div>
    




