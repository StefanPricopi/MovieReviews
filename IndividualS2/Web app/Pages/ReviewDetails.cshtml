@page
@model Web_app.Pages.ReviewDetailsModel
@{
}
@if(Model.review!=null)
{
    <div>

        <h1>Title:@Model.review.Title</h1>
        <h2 class="Score">Score: @Model.review.Score</h2>

    </div>
    <div class="details-container">

        <img src="/img/mockdetails.jpg" alt="mock-image">
        <p class="Description">@Model.review.Description</p>
    </div>

    <div class="comment-section">
        <h3>Add a Comment</h3>
        <form id="commentForm">
            <input type="hidden" id="reviewId" value="@Model.review.Id" />
            <textarea id="commentText" placeholder="Write your comment here"></textarea>
            <button type="button" onclick="addComment()">Submit Comment</button>
        </form>
        <div id="commentsList">
            <!-- Existing comments will be displayed here -->
        </div>
    </div>
    <script src=".../wwwroot/js/site.js"></script>
}



